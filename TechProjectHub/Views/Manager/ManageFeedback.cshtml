
@{
    ViewBag.Title = "ManageFeedback";
    Layout = "~/Views/Shared/Common_Manager_Layout.cshtml";
}
@using TechProjectHub.Models
@model IEnumerable<FeedbackMaster>

<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-12 pt-5 pb-5 mt-5 mb-5 bg-light" style="border-radius:15px">
        <h3 class="text-center text-primary mt-1 mb-1">Manage Feedback</h3>
        <table class="table text-center table-striped">
            <tr>
                <th>Feedback Id</th>
                <th>Name & Photo</th>
                <th>Feedback Title</th>
                <th>Feedback Details</th>
                <th>Developer Id</th>
                <th>Feedback Date</th>
            </tr>
            @{

                foreach (FeedbackMaster fm in Model)
                {
                    string picname = "";
                    if (fm.DeveloperMaster.ProfilePic == string.Empty)
                    {
                        if (fm.DeveloperMaster.Gender.ToUpper().Trim() == "MALE")
                        {
                            picname = "/Content/Images/Default_male.png";
                        }
                        else
                        {
                            picname = "/Content/Images/Default_female.png";
                        }
                    }
                    else
                    {
                        picname = "/Content/UserPics/" + fm.DeveloperMaster.ProfilePic;
                    }
                    <tr>
                        <td>@fm.Fid</td>
                        <td class="text-center">
                            <img src="@picname" width="80px" height="80px" style="border-radius:50%" /><br />
                            @fm.DeveloperMaster.Name
                        </td>
                        <td>@fm.Feedback_Title</td>
                        <td>@fm.Feedback_Detail</td>
                        <td>@fm.DeveloperId</td>
                        <td>@fm.MsgDT</td>
                    </tr>
                }

            }
        </table>
    </div>
    <div class="col-sm-1"></div>
</div>

