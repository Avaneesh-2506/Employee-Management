
@{
    ViewBag.Title = "MyProject";
    Layout = "~/Views/Shared/Common_Manager_Layout.cshtml";
}

@using TechProjectHub.Models
@model IEnumerable<ProjectMaster>

<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 pt-5 pb-5 mt-5 mb-5 bg-light" style="border-radius:15px">
        <h3 class="text-center text-primary">My Projects</h3>
        <table class="table table-bordered table-striped">
            <tr>
                <th>Project Id</th>
                <th>Project Title</th>
                <th>Project Deadline</th>
                <th>Project Description</th>
                <th>Project File</th>
                <th>Uploaded Date</th>
                @{
                    foreach (ProjectMaster pm in Model)
                    {
                    <tr>
                        <td>@pm.Project_Id</td>
                        <td>@pm.Project_Title</td>
                        <td>@pm.Deadline</td>
                        <td>@pm.Description</td>
                        <td>@pm.Project_File</td>
                        <td>@pm.Project_DT</td>
                    </tr>
                }
                }
                </tr>
            </table>
        </div>
        <div class="col-sm-1"></div>
    </div>


