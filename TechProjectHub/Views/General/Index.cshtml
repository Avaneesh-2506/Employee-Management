
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Common_General_Layout.cshtml";


}
@using TechProjectHub.Models
@model IEnumerable<NotificationMaster>
<script>
    $(document).ready(function () {
        $("#btn").click(function () {
            var name, email, mobno, query;
            name = $("#E_Name").val();
            email = $("#E_Email").val();
            mobno = $("#E_MobNo").val();
            query = $("#E_Message").val();
            var obj = { Name: name, EmailId: email, MobNo: mobno, Query: query };
            $.getJSON("/General/SaveEnquiryByAJAX", obj, function (result) {
                if (result == "SUCCESS") {
                    alert("Query send successfully.");
                    $("#btnclose").trigger("click");
                     $("#E_Name").val("");
                     $("#E_Email").val("");
                     $("#E_MobNo").val("");
                     $("#E_Message").val("");
                }
                else {
                    alert("Sorry! unable to send query.");
                }
            });
        });
    });
</script>
